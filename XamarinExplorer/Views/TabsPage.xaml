<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:views="clr-namespace:XamarinExplorer.Views" 
            x:Class="XamarinExplorer.Views.TabsPage"
            Title="Xamarin Explorer">
     <TabbedPage.ToolbarItems>
        <ToolbarItem Text="About" Order="Secondary" x:Name="AboutToolbarItem">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="add.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </TabbedPage.ToolbarItems>
    <TabbedPage.Children>
        <views:MenuPage x:Name="MenuScreen" Title="Home">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_about.png" />
                </OnPlatform>
            </NavigationPage.Icon>
        </views:MenuPage>
        <views:ItemsPage x:Name="ItemsScreen" Title="Lists">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_feed.png" />
                </OnPlatform>
            </NavigationPage.Icon>
        </views:ItemsPage>
    </TabbedPage.Children>
</TabbedPage>